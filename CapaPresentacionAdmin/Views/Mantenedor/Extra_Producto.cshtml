
@{
    ViewBag.Title = "Extra_Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="index.html">Mantenimiento</a></li>
    <li class="breadcrumb-item active">Ingrediente Extra</li>
</ol>

<div class="card">
    <div class="card-header">
        <i class="fas fa-users me-1"></i> Lista de Ingredientes
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success" onclick="abrirModal(null)">Crear Nuevo</button>
            </div>
        </div>

        <hr />

        <table id="tabla" class="display cell-border" style="width: 100%">
            <thead>
                <tr>
                    <th>Ingredientes Extras</th>
                    <th>Precio</th>
                    <th>Producto Seleccionado</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="FormModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel">Ingrediente Extra</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <input id="txtid" type="hidden" value="0" />

                <div class="row g-1">

                    <div class="col-sm-6">
                        <label for="txtingrediente" class="form-label">Ingrediente Extra</label>
                        <input type="text" class="form-control" id="txtingrediente" autocomplete="off">
                    </div>

                    <div class="col-sm-6">
                        <label for="txtprecio" class="form-label">Precio</label>
                        <input type="text" class="form-control" id="txtprecio" autocomplete="off">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Producto</label>
                        <select id="cboproducto" class="form-select">
                        </select>
                    </div>
                </div>

                <!--Mensaje de Alerta-->
                <div class="row mt-4">
                    <div class="col-12">
                        <div id="mensajeError" class="alert alert-danger" role="alert">
                            A simple danger alert—check it out!
                        </div>
                    </div>

                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="GuardarExtraProducto()">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>

        var tabladata;
        var filaSeleccionada;

        tabladata = $("#tabla").DataTable({
            responsive: true,
            ordering: false,
            "ajax": {
                url: '@Url.Action("ListarExtraP", "Mantenedor")',
                type: "GET",
                dataType: "json"
            },
            "columns": [
                { "data": "Ingrediente_Extra" },
                { "data": "Precio" },
                {
                    "data": "oProducto", "render": function (data) {
                        return data.Nombre
                    }
                },
                {
                    "defaultContent": '<button type="button" class="btn btn-primary btn-sm btn-editar"><i class="fas fa-pen"></i></button>' +
                        '<button type="button" class="btn btn-danger btn-sm ms-2 btn-eliminar"><i class="fas fa-trash"></i></button>',
                    "orderable": false,
                    "searchable": false,
                    "width": "90px"
                }
            ],
            "language": {
                "url": "//cdn.datatables.net/plug-ins/2.0.8/i18n/es-ES.json"
            }
        });

        jQuery.ajax({
            url: '@Url.Action("ListarProducto", "Mantenedor")',
            type: "GET",
            data: null,
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (data) {

                $("<option>").attr({ "value": "0", "disabled":"true" }).text("Seleccionar").appendTo("#cboproducto")

                $.each(data.data, function (index, item) {
                    $("<option>").attr({ "value": item.Id_Producto }).text(item.Nombre).appendTo("#cboproducto")
                })
            },
            error: function (error) {
                console.log(error)
            }
        });

        function abrirModal(json) {

            $("#txtid").val(0);
            $("#txtingrediente").val("");
            $("#txtprecio").val("");
            $("#cboproducto").val($("#cboproducto option:first").val());
            $("#mensajeError").hide();


            if (json != null) {

                $("#txtid").val(json.Id_ExtraP);
                $("#txtingrediente").val(json.Ingrediente_Extra);
                $("#txtprecio").val(json.Precio);
                $("#cboproducto").val(json.oProducto.Id_Producto);
            }
            $("#FormModal").modal("show");
        }

        $("#tabla tbody").on("click", '.btn-editar', function () {

            filaSeleccionada = $(this).closest("tr");

            var data = tabladata.row(filaSeleccionada).data();

            abrirModal(data)

        })

        $("#tabla tbody").on("click", '.btn-eliminar', function () {

            var ingredienteseleccionada = $(this).closest("tr");

            var data = tabladata.row(ingredienteseleccionada).data();


            swal({
                title: "Esta Seguro?",
                text: "¿Desea eliminar el Ingrediente?",
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn-primary",
                confirmButtonText: "Si",
                cancelButtonText: "No",
                closeOnConfirm: true
            },
            function () {

                jQuery.ajax({
                    url: '@Url.Action("EliminarExtraP", "Mantenedor")',
                    type: "POST",
                    data: JSON.stringify({ id: data.Id_ExtraP }),
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {

                        debugger;

                        if (data.resultado) {

                            tabladata.row(ingredienteseleccionada).remove().draw();

                        }
                        else {
                            swal("No se pudo eliminar", data.mensaje, "error");

                        }
                    },
                    error: function (error) {
                        console.log(error);
                    }
                })

            });


        })

        function GuardarExtraProducto() {
            var Ingrediente = {
                Id_ExtraP: $("#txtid").val(),
                Ingrediente_Extra: $("#txtingrediente").val(),
                Precio: $("#txtprecio").val(),
                oProducto: {
                    Id_Producto: $("#cboproducto option:selected").val(),
                    Nombre: $("#cboproducto option:selected").text()
                }
            }

            jQuery.ajax({
                url: '@Url.Action("RegistrarExtraP", "Mantenedor")',
                type: "POST",
                data: JSON.stringify({ objeto: Ingrediente }),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {

                    $(".modal-body").LoadingOverlay("hide");

                    // Ingrediente NUEVO
                    if (Ingrediente.Id_ExtraP == 0) {
                        if (data.resultado != 0) {
                            Ingrediente.Id_ExtraP = data.resultado;
                            tabladata.row.add(Ingrediente).draw(false);
                            $("#FormModal").modal("hide");
                        }
                        else {

                            $("#mensajeError").text(data.mensaje);
                            $("#mensajeError").show();
                        }

                    }
                    // Ingrediente EDITAR
                    else {
                        if (data.resultado) {
                            tabladata.row(filaSeleccionada).data(Ingrediente).draw(false);
                            filaSeleccionada = null;
                            $("#FormModal").modal("hide");
                        }
                        else {
                            $("#mensajeError").text(data.mensaje);
                            $("#mensajeError").show();
                        }
                    }
                },
                error: function (error) {
                    $(".modal-body").LoadingOverlay("hide");
                    $("#mensajeError").text("Error Ajax");
                    $("#mensajeError").show();
                },
                beforeSend: function () {
                    $(".modal-body").LoadingOverlay("show", {
                        imageResizeFactor: 2,
                        text: "Cargando...",
                        size: 14
                    })

                }
            });
        }
    </script>
}
